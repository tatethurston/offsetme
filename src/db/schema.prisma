generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:@localhost:5432/offsetme_development"
}

model login_tokens {
  token      String   @id @db.VarChar
  email      String   @unique @db.VarChar
  expires_at DateTime @db.Timestamptz(6)
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
}

model sessions {
  token      String   @id @db.VarChar
  user_id    BigInt   @unique @default(autoincrement())
  expires_at DateTime @db.Timestamptz(6)
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  users      users    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_user")
}

model users {
  id         BigInt    @id @default(autoincrement())
  email      String    @unique @db.VarChar
  name       String?   @db.VarChar
  image_url  String?   @db.VarChar
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  sessions   sessions?
}
